{{ include('LightennaStructuredBundle:Fileview:partial.header.html.twig', {title: dirname, direction: direction}) }}
<div id="yardstick-x" class="yardstick"></div>
<div id="yardstick-y" class="yardstick"></div>

<div class="content">
<ul class="flow flow-{{ direction }} flow-{{ celltype }}">
  {% for file in dirlisting %}
    {% if file.type == 'directory' %}
  <li id="seq-{{ file.seq }}" class="cell {% if direction == 'x' %}screenpc-height{% else %}screenpc-width{% endif %}"><a href="/file{{ linkpath }}{{ file.name }}/">
    <div class="folder">
      {# <img class="overlay" src="/chrome/images/fullres/folder_front_dark.png" alt="directory semi-opaque front" /> #}
      {% for img_prev_n in 1..4 %}<img class="preview preview-{{ img_prev_n }}" src="/image{{ linkpath }}{{ file.name }}/[i{{ img_prev_n }}]{{ argsbase }}maxshortest=62&clipwidth=62&clipheight=50" alt="directory preview thumbnail" />{% endfor %}
    </div>
    <span class="title">{{ file.alias|e }}</span>
  </a></li>
    {% elseif file.type == 'image' %}
  <li id="seq-{{ file.seq }}" class="cell {% if direction == 'x' %}screenpc-height{% else %}screenpc-width{% endif %}"><a href="/image{{ linkpath }}{{ file.name }}">
    <img class="bounded {{ file.orientation }}-bound" src="/image{{ linkpath }}{{ file.name }}{{ argsbase }}{{ argsdefault }}" alt="image thumbnail for {{ file.alias}}" class="thumb direntry" data-base-src="/image{{ linkpath }}{{ file.name }}{{ argsbase }}" data-native-width="1000" data-native-height="1500" data-loaded-width="133" data-loaded-height="200" />
  </a></li>
    {% elseif file.type == 'video' %}
  <li id="seq-{{ file.seq }}" class="cell {% if direction == 'x' %}screenpc-height{% else %}screenpc-width{% endif %}"><a href="/image{{ linkpath }}{{ file.name }}">
    <img class="bounded {{ file.orientation }}-bound" src="/image{{ linkpath }}{{ file.name }}{{ argsbase }}{{ argsdefault }}" alt="image thumbnail for {{ file.alias}}" />
  </a></li>
    {% else %}
  <li id="seq-{{ file.seq }}" class="cell {% if direction == 'x' %}screenpc-height{% else %}screenpc-width{% endif %}">{{ file.alias }}</li>
    {% endif %}
    {% endfor %}
</ul>
</div><!-- /.content -->

