<h1>Directory</h1>
<p>Name: {{ dirname }}</p>

<script type="text/javascript" src="/chrome/vendor/jquery/jquery-2.0.3.min.js"></script>
<script type="text/javascript" src="/chrome/structured.js"></script>
<link rel="stylesheet" href="/chrome/structured.css">

<ul>
	{% for file in dirlisting %}
		{% if file.type == 'directory' %}
	<li><a href="/file{{ linkpath }}{{ file.name }}/">
		<div class="folder direntry">
			{% for img_prev_n in 1..4 %}
			<img class="preview" src="/image{{ linkpath }}{{ file.name }}/[i{{ img_prev_n }}]{{ argsbase }}maxshortest=50&clipwidth=50&clipheight=50" alt="directory preview thumbnail" />
			{% endfor %}
			<img class="overlay" src="/chrome/images/fullres/folder_overlay.png" alt="directory semi-opaque front" />
		</div>
		<span class="title">{{ file.name|e }}</span>
	</a></li>
		{% elseif file.type == 'image' %}
	<li><a href="/image{{ linkpath }}{{ file.name }}">
		<img src="/image{{ linkpath }}{{ file.name }}{{ argsbase }}{{ argsdefault }}" alt="image thumbnail for {{ file.name}}" class="thumb direntry" data-base-src="/image{{ linkpath }}{{ file.name }}{{ argsbase }}" data-native-width="1000" data-native-height="1500" data-loaded-width="133" data-loaded-height="200" />
	</a></li>
		{% elseif file.type == 'video' %}
	<li><a href="/image{{ linkpath }}{{ file.name }}">
		<img src="/image{{ linkpath }}{{ file.name }}{{ argsbase }}{{ argsdefault }}" alt="image thumbnail for {{ file.name}}" />
	</a></li>
		{% else %}
	<li>{{ file.name }}</li>
		{% endif %}
    {% endfor %}
</ul>
